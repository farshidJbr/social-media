<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".SettingActivity">

    <include
        android:id="@+id/settings_Toolbar"
        layout="@layout/app_bar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settings_Toolbar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="15dp"
                android:id="@+id/setting_profile_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/setting_profile_statuse"
                android:layout_below="@+id/setting_profile_image"
                android:text="profile status:"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/setting_profile_statuse"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inpiuts"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:hint="profile status"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/setting_profile_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/setting_profile_usernam"
                android:layout_below="@id/setting_profile_statuse"
                android:text="username:"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/setting_profile_usernam"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inpiuts"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="username"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/setting_profile_statuse"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/setting_profile_name"
                android:layout_below="@+id/setting_profile_usernam"
                android:text="profile name:"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/setting_profile_name"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inpiuts"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="profile name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/setting_profile_usernam"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/setting_profile_country"
                android:layout_below="@+id/setting_profile_name"
                android:text="country:"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/setting_profile_country"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inpiuts"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="Country"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/setting_profile_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/setting_profile_DateOfBirth"
                android:layout_below="@+id/setting_profile_country"
                android:text="date of birth:"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/setting_profile_DateOfBirth"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inpiuts"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="Date Of Birth"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/setting_profile_country"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/setting_profile_Gender"
                android:layout_below="@+id/setting_profile_DateOfBirth"
                android:text="gender:"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/setting_profile_Gender"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inpiuts"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="Gender"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/setting_profile_DateOfBirth"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/setting_profile_RelationShip"
                android:layout_below="@+id/setting_profile_Gender"
                android:text="relationship:"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/setting_profile_RelationShip"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inpiuts"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="RelationShip status"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/setting_profile_Gender"/>

            <Button
                android:id="@+id/setting_profile_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="update account settings"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@+id/setting_profile_RelationShip"
                android:background="@drawable/button"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>