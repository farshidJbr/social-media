<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfile"
    tools:context=".ProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimageactivity"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile"
                />
            <TextView
                android:id="@+id/myporofile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileimageactivity"
                android:layout_margin="3dp"
                android:text="profile name"
                android:textColor="#fff"
                android:textAlignment="center"
                android:padding="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/myusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myporofile_name"
                android:layout_margin="3dp"
                android:text="user name"
                android:textColor="#fff"
                android:textAlignment="center"
                android:padding="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/myprofile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myusername"
                android:layout_margin="3dp"
                android:text=" hey,im using social app , developed by farshid"
                android:textColor="#fff"
                android:textAlignment="center"
                android:padding="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/mycountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myprofile_status"
                android:layout_marginTop="60dp"
                android:text="profile name"
                android:textColor="#fff"
                android:textAlignment="center"
                android:padding="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/myDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mycountry"
                android:layout_margin="3dp"
                android:text="profile name"
                android:textColor="#fff"
                android:textAlignment="center"
                android:padding="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/myGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myDateOfBirth"
                android:layout_margin="3dp"
                android:text="profile name"
                android:textColor="#fff"
                android:textAlignment="center"
                android:padding="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/myrelation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myGender"
                android:layout_margin="3dp"
                android:text="Relation"
                android:textColor="#fff"
                android:textAlignment="center"
                android:padding="8dp"
                android:textStyle="bold"
                />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>